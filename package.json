{
  "name": "jeevag-portfolio",
  "version": "1.0.0",
  "description": "A modern, interactive portfolio featuring 3D animations, glassmorphism UI, and mini-games. Built to showcase my skills, projects, and creativity in web development.",
  "private": true,
  "scripts": {
    "start": "npm run dev",
    "dev": "npm run watch:css ",
    "build:css": "npx @dhiwise/component-tagger && npx tailwindcss -i ./public/tailwind.css -o ./public/css/style.css --minify",
    "watch:css": "npx @dhiwise/component-tagger && npx tailwindcss -i ./public/tailwind.css -o ./public/css/style.css --watch",
    "serve": "live-server public"
  },
  "devDependencies": {
    "@dhiwise/component-tagger": "^1.0.10",
    "@tailwindcss/cli": "^4.1.13",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.1",
    "live-server": "^1.2.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.13"
  },
  "author": "jeeva562",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jeeva562/Portfolios.git"
  },
  "bugs": {
    "url": "https://github.com/jeeva562/Portfolios/issues"
  },
  "homepage": "https://github.com/jeeva562/Portfolios#readme",
  "engines": {
    "node": ">=18"
  }
